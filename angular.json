{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "form-effects": {
            "projectType": "library",
            "root": "projects/form-effects",
            "sourceRoot": "projects/form-effects/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/form-effects/tsconfig.lib.json",
                        "project": "projects/form-effects/ng-package.json"
                    },
                    "defaultConfiguration": "production",
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/form-effects/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-builders/jest:run",
                    "options": {
                        "main": ["jest-setup.ts"],
                        "tsConfig": "tsconfig.spec.json",
                        "no-cache": true
                    }
                },
                "lint": {
                    "builder": "@angular-devkit/build-angular:tslint",
                    "options": {
                        "tsConfig": [
                            "projects/form-effects/tsconfig.lib.json",
                            "projects/form-effects/tsconfig.spec.json"
                        ],
                        "exclude": ["**/node_modules/**"]
                    }
                }
            }
        }
    },
    "defaultProject": "form-effects"
}
